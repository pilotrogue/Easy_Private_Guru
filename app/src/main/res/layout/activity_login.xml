<!--        android:id="@+id/btn_sign_in"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:text="Sign in with Google"-->
<!--        />-->

</RelativeLayout>