<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DaftarActivity"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/tvPesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Anda belum terdaftar sebagai guru"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:textSize="@dimen/paragraph"/>

    <Button
        android:id="@+id/btnDaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar sekarang!"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvPesan"/>

    <Button
        android:id="@+id/btnGantiAkun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gunakan akun lain"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnDaftar"/>

</RelativeLayout>