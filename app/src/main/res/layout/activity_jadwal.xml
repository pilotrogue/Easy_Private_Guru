<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.JadwalActivity"
    android:orientation="vertical"
    android:padding="@dimen/padding1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jadwal"
        android:textSize="@dimen/header1"
        android:layout_margin="@dimen/margin2"/>

    <LinearLayout
        android:id="@+id/llBtnSync"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white"
        >

        <ImageView
            android:layout_margin="@dimen/margin2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_google_calendar_icon"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sinkronisasi dengan Google Calendar"
            android:layout_margin="@dimen/margin2"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvJadwal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin2"/>

</LinearLayout>